<scxml initial="off" version="0.9" xmlns="http://www.w3.org/2005/07/scxml">
 <state id="off">
  <transition event="button" target="on"></transition>
 </state>
 <state id="on">
  <transition event="timer"></transition>
  <transition target="off"></transition>
  <transition event="button" target="off"></transition>
 </state>
</scxml>
